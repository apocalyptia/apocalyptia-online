{
  "name": "apocalyptia-online",
  "description": "A post-apocalyptic digital tabletop role-playing game about the end of the world.",
  "repository": "https://github.com/apocalyptia/apocalyptia-online",
  "version": "0.2.0",
  "scripts": {
    "bootstrap": "netlify dev:exec node ./scripts/bootstrap-fauna-database.js",
    "build": "routify -b && rollup -c && routify export && workbox injectManifest",
    "deploy:netlify": "cd scripts/netlify && npm run deploy",
    "dev": "run-p routify rollup",
    "dev-dynamic": "cross-env BUNDLING=dynamic npm run dev",
    "dev:nollup": "run-p routify nollup",
    "export": "routify export",
    "nollup": "nollup -c",
    "prebuild": "echo 'setup faunaDB' && npm run bootstrap",
    "rollup": "rollup -cw",
    "routify": "routify",
    "serve": "spassr --serve-spa --serve-ssr",
    "start": "netlify dev"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^13.0.0",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "del": "^5.1.0",
    "nollup": "^0.13.12",
    "npm-run-all": "^4.1.5",
    "rollup": "^2.29.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-hot": "^0.0.31",
    "rollup-plugin-livereload": "^1.3.0",
    "rollup-plugin-svelte": "^5.2.3",
    "rollup-plugin-svelte-hot": "^0.10.0",
    "rollup-plugin-terser": "^6.1.0",
    "spassr": "^1.1.2"
  },
  "dependencies": {
    "@rollup/plugin-replace": "^2.3.3",
    "@roxi/routify": "^2.2.2",
    "faunadb": "^3.0.1",
    "gotrue-js": "^0.9.27",
    "netlify-cli": "^2.65.1",
    "postcss-import": "^12.0.1",
    "svelte": "^3.29.0",
    "svelte-preprocess": "^4.5.1",
    "websocket": "^1.0.32",
    "workbox-cli": "^5.1.4"
  },
  "routify": {
    "extensions": "svelte,html,svx,md",
    "dynamicImports": true,
    "routifyDir": ".routify"
  }
}
